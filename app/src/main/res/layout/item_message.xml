<?xml version="1.0" encoding="utf-8"?>

<layout xmlns:android="http://schemas.android.com/apk/res/android">

    <data>

        <variable
            name="messageItem"
            type="com.example.demo02app.model.message.data.MessageItem" />
    </data>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/iv_profile"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_marginStart="10dp"
            android:layout_marginEnd="10dp"
            android:padding="5dp"
            android:src="@mipmap/profile_pic_male" />

        <TextView
            android:id="@+id/tv_nickname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toStartOf="@id/tv_time"
            android:layout_toEndOf="@+id/iv_profile"
            android:gravity="center_vertical"
            android:hint="@string/ui_nickname"
            android:maxLength="10"
            android:maxLines="1"
            android:text="@{messageItem.nickname}"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_nickname"
            android:layout_alignBottom="@+id/iv_profile"
            android:layout_marginBottom="5dp"
            android:layout_toEndOf="@+id/iv_profile"
            android:gravity="center"
            android:hint="@string/ui_last_message"
            android:maxLength="15"
            android:maxLines="1"
            android:text="@{messageItem.lastMessage}"
            android:textColor="@color/gray"
            android:textSize="15sp" />

        <TextView
            android:id="@+id/tv_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:hint="2020-10-01"
            android:text="@{messageItem.timeOfMessage}"
            android:textColor="@color/gray"
            android:textSize="18sp" />

    </RelativeLayout>
</layout>